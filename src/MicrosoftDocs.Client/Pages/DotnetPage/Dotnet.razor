        new("What's new in .NET 6", Href: "/documentation/dotnet/"),
        new("Deploy .NET apps", Href: "/documentation/dotnet/"),
        new(".NET Foundation", Href: "/documentation/dotnet/"),
        new(".NET developer community", Href: "/documentation/dotnet/"),
