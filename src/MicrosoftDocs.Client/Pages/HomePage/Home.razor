                Azure DevOps
            </DirectoryItem>
            <DirectoryItem Href="/documentation/cpp">
                C++
            </DirectoryItem>
            <DirectoryItem Href="/documentation/csharp">
                C#
            </DirectoryItem>
            <DirectoryItem Href="/documentation/dynamics-365">
                Dynamics 365 
            </DirectoryItem>
            <DirectoryItem Href="/documentation/gaming">
                Gaming
            </DirectoryItem>
            <DirectoryItem Href="/documentation/microsoft-365">
                Microsoft 365 
            </DirectoryItem>
            <DirectoryItem Href="/documentation/microsoft-edge">
                Microsoft Edge
            </DirectoryItem>
            <DirectoryItem Href="/documentation/microsoft-security">
                Microsoft Security
            </DirectoryItem>
            <DirectoryItem Href="/documentation/microsoft-teams">
                Microsoft Teams
            </DirectoryItem>
            <DirectoryItem Href="/documentation/one-drive">
                OneDrive
            </DirectoryItem>
            <DirectoryItem Href="/documentation/power-apps">
                Power Apps
            </DirectoryItem>
            <DirectoryItem Href="/documentation/power-bi">
                Power BI
            </DirectoryItem>
            <DirectoryItem Href="/documentation/power-platform">
                Power Platform
