<section class="@($"section { Class }")">
    <div class="container">
        <header class="@($"section__header { HeaderClass }")">
            <div>
                <span class="section__header__sub-title sub-title">@SubTitle</span>
                <h2 class="section__header__title">@Title</h2>
                <p class="section__header__desc custom-text">@Description</p>
            </div>
            <div class="section__header__img-box">
                @if(ImageUrl is not null)
                {
                    <img src="@ImageUrl" class="img"/>
                }
            </div>
        </header>

        <div class="@($"section__content { ContentClass }")">
            @ChildContent
        </div>
    </div>
</section>

@code {
    [Parameter]
    public string Class { get; set; } = "";

    [Parameter]
    public string HeaderClass { get; set; } = "";

    [Parameter]
    public string ContentClass { get; set; } = "";

    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public string SubTitle { get; set; } = "";

    [Parameter]
    public string Description { get; set; } = "";

    [Parameter]
    public string? ImageUrl { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    
}
